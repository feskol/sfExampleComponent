# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
tab_width = 4
indent_style = space
indent_size = 4

[*.{js,phtml,php,css,scss,hbs,ts}]
insert_final_newline = true
trim_trailing_whitespace = true

[*.(js,php,css,scss)]
max_line_length = 120

[*.{xml,xsd}]
trim_trailing_whitespace = true